<div class="container">
  <div class="row main-row">
    <div class="col-12">
     <h1 class="mt-4"><strong> マイページ編集画面</strong></h1>

     <%= render "public/shared/error_messages", resource: @user %>

     <%= form_with model: @user, url: user_path do |f| %>

       <div class="form-row mt-5">
        <span class="form-group col-3">ユーザー名</span>
        <div class="form-group col-3">
         <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3">メールアドレス</span>
        <div class="form-group col-3">
         <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3">プロフィール</span>
        <div class="form-group col-4">
          <%= f.text_area :profile, :placeholder => "例　肌悩みについて　どんな商品を求めているのか", class: "form-control", rows: 5 %>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3">プロフィール画像</span>
        <div class="form-group col-3">
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
      </div>

      <div class="d-flex mt-5">
        <%= f.submit "編集内容を保存",class: "btn btn-success text-light d-grid gap-2 col-4 mx-auto" %>
        <%= link_to "退会する",check_users_path, class: "btn btn-danger" %>
      </div>

     <% end %>
    </div>
  </div>
</div>

