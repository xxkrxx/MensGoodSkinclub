<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4"><strong> レビュー詳細ページ</strong></h1>
        <div class="col-4 mx-auto text-center"> 
          <%= image_tag @post.get_image(300, 300), style: "width:300px" %>
        </div>
      <div class="col-7 offset-1 mt-4">
        <div class="row">
          <div class="col-4">
            <p class="font-weight-bold">商品名</p>
          </div>
          <div class="col-8">
            <%= @post.productname %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p class="font-weight-bold">商品説明</p>
          </div>
          <div class="col-8">
            <%= @post.comment %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p class="font-weight-bold">肌悩み</p>
          </div>
          <div class="col-8">
            <%= @post.skin_concern.name %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p class="font-weight-bold">カテゴリー</p>
          </div>
          <div class="col-8">
             <%= @post.category.name %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p class="font-weight-bold">評価</p>
          </div>
          <div class="col-8">
            <div id="star_<%= @post.id %>">
                <script>
                $(document).on('turbolinks:load', function() {
                let elem = document.querySelector('#star_<%= @post.id %>');
                if (elem == null) return;

                elem.innerHTML = "";
                let opt = {
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  score: "<%= @post.star %>",
                  readOnly: true,
                };
                raty(elem, opt);
              });
              </script>
            </div>
            <div class="text-right">
              <%= form_with model:[@post, @comment], local: false do |f| %>
                <%= f.text_area :comment, rows: '5', placeholder: "Any comments on this post?", class: "form-control mt-3", id: "comment_textarea" %>
                <div class="text-right">
                  <%= f.submit "Submit", class: "btn btn-primary mt-3 mb-3" %>
                </div>
              <% end %>
              <div id="favorite_btn_<%= @post.id %>" >
                <%= render 'public/favorites/btn', post: @post %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div id="comment_show">
        <%= render 'public/comments/comment', post: @post, comments: @comments %>
      </div>
    </div>
  </div>
</div>