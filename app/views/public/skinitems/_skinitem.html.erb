<div class="text-card-container">
  <div class="card content-card border-dark">
    <div class="card-header p-0">
      <%= link_to skinitem_path(skinitem) do %>
        <%= image_tag skinitem.get_image(200, 200), style: "height:150px; width:200px;" %>
      <% end %>
    </div>
    <div class="card-body d-flex align-items-center">
      <div>
        <p class="card-title text-left">
          <%= truncate(skinitem.product_name, length: 10, omission: '...') %>
        </p>
        <p class="card-title text-left" style="font-weight: bold; font-size: 1.2em;">
          <%= link_to "詳細を見る", skinitem_path(skinitem) %>
        </p>
        <p style="font-weight: bold;">
          <% if category == 'all' %>
            <div id="favorite_btn_<%= skinitem.id %>" >
              <%= render 'public/itemfavorites/btn', skinitem: skinitem %>
            </div>
          <% elsif category == 'acne' %>
            <div id="acne_favorite_btn_<%= skinitem.id %>" >
              <%= render 'public/itemfavorites/btn', skinitem: skinitem %>
            </div>
          <% elsif category == 'pore' %>
            <div id="pore_favorite_btn_<%= skinitem.id %>" >
              <%= render 'public/itemfavorites/btn', skinitem: skinitem %>
            </div>
           <% else %>
            <div id="whitening_favorite_btn_<%= skinitem.id %>" >
              <%= render 'public/itemfavorites/btn', skinitem: skinitem %>
            </div>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>