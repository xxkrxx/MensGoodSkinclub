<div class="container">
  <div class="row main-row">
    <div class="col-10 mx-auto">
      <h2 class="title mt-3"><strong>商品詳細ページ</strong></h2>
      <div class="d-flex" style="flex-direction: row-reverse;">
      <%= link_to "一覧に戻る", skinitems_path, class: "btn btn-info" %>
      </div>
      <div class="row">
        <div class="col-4 mt-3">
          <%= image_tag @skinitem.get_image(300, 300), style: "width:300px" %>
        </div>

        <div class="col-7 offset-1">
          <div class="row">
            <div class="col-4">
              <p class="font-weight-bold">商品名</p>
            </div>
            <div class="col-8">
              <%= @skinitem.product_name %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-4">
              <p class="font-weight-bold">商品説明</p>
            </div>
            <div class="col-8">
              <%= @skinitem.introduction %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-4">
              <p class="font-weight-bold">肌悩み</p>
            </div>
            <div class="col-8">
              <%= @skinitem.skin_concern.name %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-4">
              <p class="font-weight-bold">商品カテゴリー</p>
            </div>
            <div class="col-8">
              <%= @skinitem.skinitem_category.name %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-4">
              <p class="font-weight-bold">カテゴリー</p>
            </div>
            <div class="col-8">
              <%= @skinitem.category.name %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
