<% if post.favorites?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
    <i class="fas fa-heart unlike-btn" ></i><%= post.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
      <i class="far fa-heart like-btn"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% end %>
