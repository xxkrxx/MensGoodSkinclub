<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="col-10 text-center title">
        <span><%#= @user.name %></span><span style= "font-size: 30px;">さんの会員情報編集</span>
      </div>
      
      <%#= form_with model: @user, url: admin_user_path(@user),method: :patch do |f| %>
      
       <%#= render "public/shared/error_messages", resource: @user %>
       
       <div class="form-row">
         <span class="form-group col-3"></span>
         <div class="form-group col-6">
          <%#= @user.id %> 
         </div>
       </div>
       
        <div class="form-row">
         <span class="form-group col-3 pt-4"></span>
         <div class="form-group col-3">
          <label for="name">氏名</label>
          <%#= f.text_field :name, class: "form-contro%> 
         </div>
       </div>
       
       <div class="form-row">
        <span class="form-group col-3 pt-4"></span>
        <div class="form-group col-3">
          <label for="email">メールアドレス</label>
          <%#= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-row">
        <span class="form-group col-3 pt-4"></span>
        <div class="form-group col-3">
          <label for="email">会員ステータス</label>
          <%#= f.radio_button :is_active, true,style: 'transform: scale(1.5);' %>
          <%#= f.label :is_active,"有効" %>

          <%#= f.radio_button :is_active, false,style: 'transform: scale(1.5);',class: "ml-4" %>
          <%#= f.label :is_active,"退会" %>
        </div>
      </div>
      
      <div class="actions form-group justify-content:center; d-flex">
        <%#= f.submit "変更を保存",class: "btn btn-success d-grid gap-2 col-6 mx-auto mb-3" %>
      </div>
       <%# end %>
    </div>
  </div>
</div>