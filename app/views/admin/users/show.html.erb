<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="col-10 text-center title mb-4">
      <span><%#= @user.name %></span><span style= "font-size: 30px;">さんの会員情報編集</span>
      </div>
      <div class="row ml-5">
        <div class="col-3 p-3 border border-dark table-warning">会員ID</div>
        <div class="col-5 p-3 border border-dark table-warning bg-white"><%#= @customer.id %>aaa</div>
      </div>
      
      <div class="row ml-5">
        <div class="col-3 p-3 border border-dark table-warning">氏名</div>
        <div class="col-5 p-3 border border-dark table-warning bg-white"><%#= @customer.name %>aaa</div>
      </div>
      
      <div class="row ml-5">
        <div class="col-3 p-3 border border-dark table-warning">メールアドレス</div>
        <div class="col-5 p-3 border border-dark table-warning bg-white"><%#= @customer.email %>aaa</div>
      </div>
      
      <div class="row ml-5">
        <div class="col-3 p-3 border border-dark table-warning">会員ステータス</div>
        <div class="col-5 p-3 border border-dark table-warning bg-white">
        <%# if @user.is_active == true %>
        <strong style="color: #1a8066;">有効</strong>
        <%# else %>
        <strong class="text-danger">退会</strong>
        <%# end %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-3">
        <!--<%= link_to "編集する", edit_admin_user_path,class: "btn btn-success mt-5 mr-5" %>(@user)-->
        </div>
      </div>
    </div>
  </div>
</div>