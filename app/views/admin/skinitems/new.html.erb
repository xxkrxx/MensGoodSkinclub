<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4"><strong>新規商品投稿画面</strong></h1>
      <%= form_with model: @skinitem, url: admin_skinitems_path do |f| %>

        <div class="form-row mt-5">
          <span class="form-group col-3">商品画像</span>
          <div class="form-group col-3">
            <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/jpeg,image/png' %>
          </div>
        </div>

        <div class="form-row mt-3">
          <span class="form-group col-3">商品名</span>
          <div class="form-group col-3">
            <%= f.text_field :product_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-row mt-3">
          <span class="form-group col-3">商品説明</span>
          <div class="form-group col-4">
            <%= f.text_area :introduction, class: "form-control", rows: 5 %>
          </div>
        </div>

        <div class="form-row mt-3">
          <span class="col-3">肌悩み</span>
          <%= f.collection_select :skin_concern_id, SkinConcern.all, :id, :name ,  include_blank: "選択して下さい" %>
        </div>

        <div class="form-row mt-3">
          <span class="col-3">商品カテゴリー</span>
          <%= f.collection_select :name, Skinitem.all, :name, :name ,  include_blank: "選択して下さい" %>
        </div>

         <div class="form-row mt-3">
          <span class="col-3">カテゴリー</span>
          <%= f.collection_select :category_id, @categories, :id, :name ,  include_blank: "選択して下さい" %>
        </div>

        <div class="actions form-group justify-content-center d-flex mt-5">
          <%= f.submit "商品を投稿", class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</div>


